<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fidel.fidel" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.ConnectActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".activities.ConnectActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ConnectActivity" />
        </activity>
        <activity
            android:name=".activities.ForbiddenListActivity"
            android:label="@string/title_activity_forbidden_list"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.WeightLuggageActivity"
            android:label="@string/title_activity_weight_luggage"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SizeLuggageActivity"
            android:label="@string/title_activity_size_luggage"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ProcessActivity"
            android:label="@string/title_activity_process"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ShoppingActivity"
            android:label="@string/title_activity_shopping"
            android:parentActivityName=".activities.ProcessActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.ProcessActivity" />
        </activity>
        <activity
            android:name=".activities.TicketActivity"
            android:label="@string/title_activity_ticket"
            android:parentActivityName=".activities.ProcessActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.ProcessActivity" />
        </activity>
        <activity
            android:name=".activities.MyLuggagesActivity"
            android:label="@string/title_activity_my_luggages"
            android:parentActivityName=".activities.ProcessActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fidel.fidel.activities.ProcessActivity" />
        </activity>

    </application>

</manifest>
